configuration {
	display-drun:    " Apps";
	display-window:  "缾 Windows";
	show-icons:false;
	font: "monospace 10";
}

@import "colors.rasi"

* {
	background-color:            #090c12;
	text-color:                  @fg;
	selbg:                       @se;
	actbg:                       #4c566a;
	urgbg:                       #bf616a;
	winbg:                       #66cccc;

	selected-normal-foreground:  @text-color;
	normal-foreground:           @text-color;
	selected-normal-background:  @actbg;
	normal-background:           @background-color;

	selected-urgent-foreground:  @urgbg;
	urgent-foreground:           @text-color;
	selected-urgent-background:  @actbg;
	urgent-background:           @background-color;
    urgent-foreground:           @urgbg;

	selected-active-foreground:  @selbg;
	active-foreground:           @selbg;
	selected-active-background:  @actbg;
	active-background:           @background-color;

	line-margin:                 2;
	line-padding:                2;
	separator-style:             "none";
	hide-scrollbar:              "true";
	margin:                      0;
	padding:                     5;
}

window {
	location:	 center;
	anchor:		 center;
	height:		 65%;
    //y-offset:    24px;
    //x-offset:    12px;
	width:		 33%;
	orientation: horizontal;
	children:	 [mainbox];
    border-radius: 10px;
    border: 2px solid;
    border-color: @bd;
}

inputbar {
	padding: 5px;
	spacing: 5px;
}

mainbox {
    border: 						0px;
    border-color: 					@ac;
    padding: 						6px;
}

