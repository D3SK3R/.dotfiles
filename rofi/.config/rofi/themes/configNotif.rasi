entry {
	expand:         true;
	text-color:     @normal-foreground;
	vertical-align: 0;
	padding:        5px 0px 0px 20px;
    enabled:        false;
}

// notification center string
prompt {
       padding:     5px 0px 0px 115px;
       font:        "monospace 12";
}

element {
    padding: 						5px;
    border:                         -3px;
    border-radius: 					5px;
    spacing:                        5px;
}
element-text {
    border: 						3px;
    border-radius: 					5px;
    border-color: 					@bg;
    padding: 						2px;
    background-color:               @bg;
    text-color:                     @fg;
}
element selected {
    background-color: 				@fg;
    border:                         0px;
    border-radius: 					6px;
}
element alternate {
    background-color: 				@bg;
    border:                         0px;
    border-radius: 					6px;
    text-color:                     @fg;
}

sidebar {
    border:       					0px;
    border-color: 					@ac;
    border-radius: 					0px;
}

button {
    background-color:             	@bg;
    text-color: 					@fg;
    margin: 						5px;
    padding: 						5px;
    border: 						0px;
    border-radius: 					4px;
    border-color: 					@fg;
}

button selected {
    background-color:             	@ac;
    text-color: 					@bg;
    border: 						0px;
    border-radius: 					4px;
    border-color: 					@fg;
}

scrollbar {
    width:        					4px;
    border:       					0px;
    handle-color: 					@fg;
    handle-width: 					8px;
    padding:      					0;
}

message {
    border: 						0px;
    border-color: 					@ac;
    padding: 						0px 0px 1px 10px;
}

textbox {
    text-color: 					@fg;
}
