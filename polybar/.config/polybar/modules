;==========================================================
;https://gitlab.com/polybar/polybar/-/wikis/Module:-bspwm
;https://github.com/polybar/polybar/wiki/Module:-bspwm
[module/bspwm]
type = internal/bspwm
# ÔÉâ Ôùü
format = "Ôùü <label-state>"
format-background =         ${colors.bg-alt}
format-foreground =         ${colors.fg-alt}
pin-workspaces = true

enable-click = true
enable-scroll = true
reverse-scroll = true

label-monitor-font = 1
label-focused-font = 1
label-occupied-font = 1
label-empty-font = 1
label-urgent-font = 1

; <label-mode> - gets replaced with <label-(monocle|tiled|fullscreen|floating|locked|sticky|private)>
; example: <label-state><label-mode> shows the workspaces and the mode for that workspace

label-tiled                 = T
label-monocle               = M
label-monocle-background       = ${colors.bg-alt}
label-monocle-foreground       = ${colors.fg-alt}
label-monocle-padding          = 1

label-monitor = %name%
label-monitor-background       = ${colors.bg-alt}
label-monitor-foreground       = ${colors.fg-alt}
label-monitor-padding          = 1

label-focused               = ÔÑë
label-focused-background    = ${colors.bg-alt}
;label-focused-foreground    = #77B9C4
label-focused-foreground    = ${colors.fg-alt}
label-focused-padding       = 1

;label-occupied               = ÔÜí
label-occupied               = ÔÑå
label-occupied-background     = ${colors.bg-alt}
label-occupied-foreground    = ${colors.fg-alt}
label-occupied-padding       = 1

; leave this blank so that the bar will only show desktops occupied by something
label-empty             =
;label-empty             = ÔÑå
;label-empty 			= ÔòØ
label-empty-background  = ${colors.bg-alt}
;label-empty-foreground  = #abb2bf
label-empty-foreground  = ${colors.fg-alt}
label-empty-padding     = 1

label-urgent                = ÔÅö
label-urgent-background     = ${colors.bg-alt}
label-urgent-foreground     = #ff0000
label-urgent-padding        = 1

; If any values for label-dimmed-N are defined, the workspace/mode
; colors will get overridden with those values if the monitor is out of focus
; To only override workspaces in a specific state, use:
;   label-dimmed-focused
;   label-dimmed-occupied
;   label-dimmed-urgent
;   label-dimmed-empty
;label-dimmed-underline = #51526c
;label-dimmed-focused-foreground = #FFF


